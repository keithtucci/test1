			<RightNavButton>
				<Button id="buttonRefresh" class="buttonRefresh" onClick="doRefresh"  />
			</RightNavButton>
			<OptionDialog id="dialogDeleteActions" />
			<View id="viewData" class="viewData" >
				<TableView id="tableviewOrders" class="tableviewgrouped"  />
			</View>
			<View id="viewLoading" class="viewLoading">
				<View id="viewLoadingContainer" class="viewLoadingContainer">
					<ActivityIndicator id="activityindicatorLoading" />
